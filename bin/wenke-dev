#!/usr/bin/env node

const wenkeDev = require('..');
const utils = require('../lib/utils');
const program = require('commander');

program.version(require('../package').version);

program.usage('[dir] [optionfdsd]')
    .option('-s, --static-files-directory [static files directory]', 'static files directory')
    .option('-w, --webapp-directory [webapp directory]', 'webapp directory')
    .option('-livereload-port, --livereload-port [livereload\'s port]', 'livereload\'s port')
    .option('--norefresh [don\'t auto refresh]', 'norefresh')
    .option('--np [node project]', 'node project')
    .option('--preact [use preact]', 'use preact')
    .option('--ie8tips <ie8tips directory>', 'uglify ie8tips')
    .option('--style', 'build style')
    .parse(process.argv);

utils.verifyVersion()
    .then((checkRes) => {
        if (!checkRes) return;

        global.startCompile = Date.now();
        wenkeDev(program);
    })
    .catch((err) => {
        console.log(err)
    })


